<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="30sp"
            android:textStyle="bold"
            android:text="Welcome\nPlease sign up here"
            android:textColor="@color/colorApp"
            android:textSize="25sp"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_margin="15sp"
        android:padding="15sp"
        >

            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:inputType="text"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_fullname"
                android:drawableTint="@color/colorApp"
                />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                />

            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CIN"
                android:textSize="15sp"
                android:textStyle="bold"
                android:inputType="number"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/colorApp"
                />

            <EditText
                android:id="@+id/phoneSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textSize="15sp"
                android:textStyle="bold"
                android:inputType="number"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/colorApp"
                />

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="15sp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:layout_margin="10sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorApp"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:text="Sign up"
                app:cornerRadius="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/goToSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goToSignIn"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorApp"
                android:layout_marginBottom="10sp"
                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>